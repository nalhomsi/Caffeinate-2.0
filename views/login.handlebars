<section class='login-section'>
	<div class='hero-body'>
		<div class='container'>
			<div class='columns is-centered'>
				<div class='column is-5-tablet is-4-desktop is-3-widescreen'>
					<form onsubmit='return false' class='box'>
						<div class='field'>
							<label for='' class='label has-text-dark'>Email</label>
							<div class='control has-icons-left'>
								<input
									id='email-login'
									type='email'
									placeholder='e.g. bobsmith@gmail.com'
									class='input'
									required
								/>
								<span class='icon is-small is-left'>
									<i class='fa fa-envelope'></i>
								</span>
							</div>
						</div>
						<div class='field'>
							<label for='' class='label has-text-dark'>Password</label>
							<div class='control has-icons-left'>
								<input
									id='password-login'
									type='password'
									placeholder='*******'
									class='input'
									required
								/>
								<span class='icon is-small is-left'>
									<i class='fa fa-lock'></i>
								</span>
							</div>
						</div>
						<div class='field'>
							<button id='btnLogin' class='button is-success'>
								Login
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>